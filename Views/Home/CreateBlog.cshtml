@* @using authenticatedapp.ViewModel
@model PrivacyViewModel *@
@model authenticatedapp.Models.Blog
@{
	ViewData["Title"] = "Create Blog";
}
<h1>@ViewData["Title"]</h1>



<form asp-action="CreateBlog" method="post">
	
	<div class="form-group">
		<label asp-for="@Model.name"></label>
		<input asp-for="@Model.name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.title"></label>
		<input asp-for="@Model.title" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.blogtext"></label>
		<input asp-for="@Model.blogtext" type="text" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary mp-2">Save</button>
</form>
